body {
    background: #9edff5;
    font-family: Arial;
}
h1 {
    font-size: 20px;
    font-weight: bold;
}
a {
    text-decoration: none;
    color: inherit;
}

.zapp {
    &:after {
        content: "";
        display: block;
        height: 0;
        clear: both;
        visibility: hidden
    }
}

.itemblocks {
    border: 1px solid #000;
    .block {
        border: 1px solid #000;
    }
}
.header {
    height: 50px;
    width: 100%;
    background: #D0D0D0;
}

.wrapper {
    width: 80%;
    margin: 0 auto;
    background: #FFF;
    height: 100%;
    padding: 50px 20px;
    .zapp;
}

//CMS

/* menu */
.menu {
    background: #C7C7C7;
    .zapp;
    > ul {
        width: 80%;
        padding: 0 20px;
        margin: 0 auto;
        > li {
            /*float: left;*/
            display: table-cell;
            /*display: inline-block;*/
            /*height: 20px;*/
            position: relative;
            > a {
                display: block;
                padding: 5px;
                margin: 0 5px;
            }
            &:hover {
               > ul {
                    opacity: 1;
                    visibility: visible;
                    transition-delay: 0s;
                }
            }
/*            &:nth-child(2) { //DEBUG CODE
                > ul {
                  opacity: 1;
                }
            }  //END DEBUG CODE*/
            > ul {
                opacity: 0;
                visibility: hidden;
                transition: visibility 0.2s, opacity 0.1s ease-out 0.1s;
                /*transition-delay: 0.3s;*/
                position: absolute;
                max-width: 150px;
                /*bottom: -20px;*/
                border-radius: 0px 4px 4px 4px;
                border: 1px solid #888;
                border-top: none;
                > li {
                    /*float: left;*/
                    width: 100%;
                    margin: 0 5px;
                    padding: 5px 7px 7px 5px;
                }
            }
        }
    }
}
/* /menu */


/* pet display */
.pet_display {
    .pet {
        display: inline-block;
        margin-right: 16px;
        border: 2px solid #999999;
        .image {
            height: 150px;
            width: 150px;
        }
    }
}

/* pet page */
.pet_image {
    float: left;
    img {
        width: 200px;
    }
}
.pet_content {
    float: left;
    margin-left: 20px;
}

.input_data {
    .row {
        margin: 15px 0 15px;
        .zapp;
        .label {
            float: left;
            width: 100px;
        }
        .input {
            float: left;
            width: 100px;
            input {
                width: 100px;
            }
        }
    }
}


//admin display
.display_table {
    tr {
        th, td {
            padding: 5px;
        }
        td {
            border-right: 1px solid #000;
        }
    }
}

//edit 
.pet_data {
    padding: 0 0 10px 0;
}
.row {
    clear: both;
    padding: 5px;
    .zapp;
    .col1,.col2 {
        float: left;
    }
    .col1 {
        width: 150px;
    }
    .col2 {
        min-width: 100px;
        min-height: 5px;
        width: 450px;
        .value_display {
            width: 450px;
        }
        textArea, input {
            width: 430px;
            resize: vertical;
        }
    }
    .fancy-img {
        &.first {
            img {
                width: 100px;
            }
        }
        img {
            width: 70px;
            
        }
    }
}
.button_submit {
    float: right;
    display: block;
    /*width: 200px;*/
    padding: 15px 20px;
    background: #89D4ED;
    color: #FFF;
    font-weight: bold;
    box-shadow: 1px -1px 5px -1px #585858;
    border-radius: 5px;
    margin-right:  168px
}



/* autocomplete */
.ui-helper-hidden-accessible {
    
}
.ui-autocomplete.ui-menu {
    .ui-menu-item {
        font-size: 12px;
    }
    .ui-autocomplete-category {
        font-size: 15px;
        line-height: 20px;
        font-style: italic;
        font-weight: bold;
    }
}

/* breadcrumbs*/
.breadcrumbs {
    li {
        color: #660000;
        display: inline-block;
        &:hover {
            color: #990000;
        }
    }
}

.wrapper.admin {
    .block {
        width: 400px;
        margin: 0 40px 20px 0;
        float: left;
        border-radius: 5px;
        overflow: hidden;
        border: 1px solid #ABD4FD;
        .block_head {
            height: 30px;
            width: 100%;
            background-color: #3399ff;
            color: #FFF;
            background:linear-gradient(top, #abd4fd 0%,#3399ff 40%,#3399ff 61%,#abd4fd 100%); /* W3C */
            background:-moz-linear-gradient(top, #abd4fd 0%, #3399ff 40%, #3399ff 60%, #abd4fd 100%); /* FF3.6+ */
            background:-webkit-linear-gradient(top, #abd4fd 0%,#3399ff 40%,#3399ff 60%,#abd4fd 100%); /* Chrome10+,Safari5.1+ */
            background:-o-linear-gradient(top, #abd4fd 0%,#3399ff 40%,#3399ff 60%,#abd4fd 100%); /* Opera 11.10+ */
            h2 {
                height: 100%;
                width: 100%;
                display: inline-block;
                vertical-align: sub;
                text-align: center;
            }
        }
        .block_content {
            padding: 10px;
        }
    }
}